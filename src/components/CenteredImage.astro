---
export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  caption?: string;
}

const { src, alt, width, height, caption } = Astro.props;
---

<div class="centered-image">
  <img src={src} alt={alt} width={width} height={height} />
  {caption && <p class="caption">{caption}</p>}
</div>

<style>
  .centered-image {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 2rem 0;
  }
  
  .centered-image img {
    max-width: 100%;
    height: auto;
  }
  
  .caption {
    margin-top: 0.5rem;
    font-style: italic;
    color: rgb(var(--gray));
    text-align: center;
    font-size: 0.9rem;
  }
</style>