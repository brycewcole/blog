---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import StrandsSolver from "../components/StrandsSolver.astro";
---

<html lang="en">
  <head>
    <BaseHead
      title="Strands Solver"
      description="Interactive helper for the NYT Strands puzzle."
    />
    <style>
      main {
        width: min(960px, 100% - 2.5rem);
        margin: 0 auto;
        padding: 3rem 0 5rem;
        display: flex;
        flex-direction: column;
        gap: 2.5rem;
        color: rgb(var(--gray-dark));
      }
      .intro {
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      .intro p {
        margin: 0;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section class="intro">
        <h1>Strands Solver Toolkit</h1>
        <p>
          Load up the current puzzle grid, run exhaustive depth-first search against
          the bundled dictionary, and spot likely theme words or spangrams with
          an optional LLM assist.
        </p>
      </section>
      <StrandsSolver />
    </main>
    <Footer />
  </body>
</html>
